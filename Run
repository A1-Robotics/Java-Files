	final private static int pausetime = 1000; //the amount of time the robot will pause between segments of the run
	final private static int speed1 = 250; //forward speed
	final private static int speed2 = 150; //backup speed
	final private static double rturncal = 13.9; //should be around 15
	final private static double lturncal = 13.9; //should be around 15
	final private static double movecal = 2667; //should be around 2567
	final private static double lrcal = 45; //should be around 42 //negative is more left
	
	final public static double tempSlope = -11.00167506; //should be around -11
	final public static double tempIntercept = 3830.700252; //should be around 3800
	final public static double windSlope = -1.503283837;
	final public static double windIntercept = -10.56099934;
	
	private static boolean notBumped;
	public static int turnmultiplier = 1; //START THIS AT 1 UNLESS YOU KNOW YOURE RUNNING ON THE LEFT STARTING BOX
